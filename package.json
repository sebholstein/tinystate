{
  "name": "@tinystate/core",
  "version": "0.1.0",
  "description": "A tiny state management library for Angular",
  "scripts": {
    "test": "jest",
    "build": "ng-packagr -p package.json",
    "lint:commit": "commitlint -e $GIT_PARAMS",
    "format": "prettier --write --config .prettierrc src/**/*.ts",
    "precommit": "lint-staged"
  },
  "repository": "https://github.com/SebastianM/tinystate",
  "author": "Sebastian Holstein <mail@sebastian-holstein.de>",
  "license": "MIT",
  "devDependencies": {
    "@angular/common": "5",
    "@angular/compiler": "^5",
    "@angular/compiler-cli": "^5",
    "@angular/core": "^5.2.8",
    "@angular/platform-browser": "5",
    "@angular/platform-browser-dynamic": "^5.2.8",
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-angular": "^6.1.3",
    "@commitlint/travis-cli": "^6.1.3",
    "@types/jest": "^22.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-zone-patch": "^0.0.8",
    "lint-staged": "^7.0.0",
    "ng-packagr": "^2.1.0",
    "node-sass": "^4.7.2",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.1",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "typescript": ">=2.4.2 <2.7",
    "zone.js": "^0.8.4"
  },
  "peerDependencies": {
    "@angular/core": "^5.0.0",
    "rxjs": "^5.5.6"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run format",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setup-jest.js",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/src/.*\\.spec)\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/public_api.ts"
    ]
  }
}
